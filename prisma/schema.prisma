// AICourseMap - Prisma Schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum RoadmapType {
  ROLE
  SKILL
}

enum CourseType {
  SHORT
  FULL
  PRO_CERTIFICATE
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ProjectLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum BookmarkEntityType {
  ROADMAP
  COURSE
  GUIDE
}

enum ProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  level         ExperienceLevel?
  goals         String?   // job/startup
  preferredTrack String?
  stripeCustomerId String?
  stripeSubscriptionId String?
  isPro         Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  progress      Progress[]
  bookmarks     Bookmark[]
  savedRoadmaps SavedRoadmap[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at       Int?
  token_type       String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Roadmap {
  id          String       @id @default(cuid())
  slug        String       @unique
  title       String
  type        RoadmapType
  description String?
  featured    Boolean      @default(false)
  order       Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  nodes       RoadmapNode[]
  edges       RoadmapEdge[]
  savedBy     SavedRoadmap[]
}

model RoadmapNode {
  id         String       @id @default(cuid())
  roadmapId  String
  title      String
  content    String?
  difficulty String?      // beginner/intermediate/advanced
  order      Int          @default(0)
  resources  String?      // JSON: [{type, title, url}]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  roadmap    Roadmap      @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  fromEdges  RoadmapEdge[] @relation("FromNode")
  toEdges    RoadmapEdge[] @relation("ToNode")
  progress   Progress[]
}

model RoadmapEdge {
  id         String      @id @default(cuid())
  fromNodeId String
  toNodeId   String
  roadmap    Roadmap     @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  roadmapId  String
  fromNode   RoadmapNode @relation("FromNode", fields: [fromNodeId], references: [id], onDelete: Cascade)
  toNode     RoadmapNode @relation("ToNode", fields: [toNodeId], references: [id], onDelete: Cascade)
  @@unique([fromNodeId, toNodeId])
}

model Course {
  id          String       @id @default(cuid())
  title       String
  provider    String
  url         String
  level       CourseLevel
  type        CourseType
  duration    String?      // e.g. "10 hours", "4 weeks"
  description String?
  rating      Float?
  featured    Boolean      @default(false)
  order       Int          @default(0)
  tags        String[]     @default([])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Guide {
  id         String   @id @default(cuid())
  slug       String   @unique
  title      String
  contentMDX String   @map("content_mdx")
  tags       String[] @default([])
  featured   Boolean  @default(false)
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model BlogPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String?
  contentMDX  String   @map("content_mdx")
  tags       String[] @default([])
  featured   Boolean  @default(false)
  publishedAt DateTime @default(now())
  order      Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProjectIdea {
  id          String        @id @default(cuid())
  title       String
  level       ProjectLevel
  description String
  skillsLearned String[]    @default([])
  datasetSuggestions String[] @default([])
  syllabus    String[]     @default([])  // Learning modules/steps
  milestones  String?      // JSON: [{title, done}]
  tags        String[]     @default([])
  order       Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Progress {
  id        String         @id @default(cuid())
  userId    String
  nodeId    String
  status    ProgressStatus @default(NOT_STARTED)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  node      RoadmapNode    @relation(fields: [nodeId], references: [id], onDelete: Cascade)
  @@unique([userId, nodeId])
}

model Bookmark {
  id         String            @id @default(cuid())
  userId     String
  entityType BookmarkEntityType
  entityId   String
  createdAt  DateTime          @default(now())
  user       User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, entityType, entityId])
}

model SavedRoadmap {
  id         String   @id @default(cuid())
  userId     String
  roadmapId  String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  roadmap    Roadmap  @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  @@unique([userId, roadmapId])
}
